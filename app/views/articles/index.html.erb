<!-- app/views/articles/index.html.erb -->
<h1>Articles</h1>

<%= form_tag articles_path, method: :get, class: 'mb-4' do %>
  <%= select_tag :theme_id, options_from_collection_for_select(Theme.all, :id, :name, params[:theme_id]), prompt: "Filter by Theme", class: 'form-select' %>
  <%= submit_tag "Filter", class: 'btn btn-primary mt-2' %>
<% end %>

<div class="row">
  <% @articles.each do |article| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
          <p class="card-text"><%= truncate(article.body, length: 100) %></p>
          <p class="card-text"><small class="text-muted">Theme: <%= article.theme.name %></small></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'New Article', new_article_path, class: 'btn btn-primary' if true %> 